<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bq.robotic.robopad_plusplus"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".RoboPadSplashScreen"
            android:screenOrientation="userLandscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SelectRobotActivity"
            android:label="@string/title_activity_select_robot"
            android:screenOrientation="userLandscape">
        </activity>
        
        <activity
            android:name=".RoboPad_plusplus"
            android:screenOrientation="userLandscape"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".RoboPadSettings"
            android:label="@string/settings"
            android:screenOrientation="userLandscape"
            android:theme="@style/SettingsTheme" >
        </activity>
    </application>

</manifest>